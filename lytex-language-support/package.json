{
  "name": "lytex-language-support",
  "displayName": "lytex language support",
  "description": "Syntax highlighting for lytex- an extension of latex that supports lilypond rendering",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "lytex",
        "aliases": ["LyTeX", "lytex"],
        "extensions": [".lytex"],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "lilypond",
        "aliases": ["LilyPond", "lilypond"],
        "extensions": [".ly"]
      }
    ],
    "grammars": [
      {
        "language": "lytex",
        "scopeName": "source.lytex",
        "path": "./syntaxes/lytex.tmLanguage.json",
        "embeddedLanguages": { "source.lilypond": "lilypond" }
      },
      {
        "language": "lilypond",
        "scopeName": "source.lilypond",
        "path": "./syntaxes/lilypond.tmLanguage.json"
      },
      {
        "scopeName": "text.tex.latex",
        "path": "./syntaxes/latex.tmLanguage.json"
      }
    ]
  }
}
